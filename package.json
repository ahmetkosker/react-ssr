{
  "name": "react-ssr",
  "packageManager": "yarn@4.0.2",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "author": {
    "email": "exarons@gmail.com",
    "name": "Ahmet Köşker",
    "url": "https://github.com/ahmetkosker"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "esbuild": "^0.19.11",
    "express": "^4.18.2",
    "i18next": "^23.7.16",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-http-backend": "^2.4.2",
    "react": "^17.0.2",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/compression": "^1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/react-i18next": "^8.1.0",
    "concurrently": "^8.0.1",
    "nodemon": "^3.0.2",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2"
  },
  "scripts": {
    "start": "node src/server/build/server.js",
    "build:client": "esbuild src/client/pages/**/*.{tsx,jsx,js,ts} --bundle --minify --loader:.js=jsx --outdir=src/client/dist/ --watch",
    "build:server": "esbuild src/server/server.tsx --bundle --platform=node --loader:.js=jsx --outfile=src/server/build/server.js",
    "build": "yarn build:client && yarn build:server",
    "tw": "tailwindcss -i ./src/client/style/index.css -o ./src/client/dist/bundle.css --watch",
    "serve": "browser-sync start --proxy 'localhost:3000' --files 'src/client/dist/bundle.css, src/client/dist/**/*.js'",
    "start:dev": "concurrently \"yarn build:client\" \"yarn build:server\" \"yarn tw\" \"yarn serve\" \"nodemon --watch src --ext js,jsx,ts,tsx --ignore src/client/dist --ignore src/server/build --exec 'node src/server/build/server.js'\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
