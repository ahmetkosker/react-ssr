{
  "name": "react-ssr",
  "packageManager": "yarn@4.0.2",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.10.5",
    "esbuild": "^0.19.11",
    "express": "^4.18.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2"
  },
  "scripts": {
    "start": "nodemon build/server.js",
    "build:client": "esbuild bin/src/index.js --bundle --outfile=dist/bundle.js --loader:.js=jsx",
    "build:server": "esbuild bin/server/server.js --bundle --outfile=build/server.js --platform=node",
    "build": "npm run build:client && npm run build:server"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
