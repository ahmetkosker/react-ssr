{
  "name": "react-ssr",
  "packageManager": "yarn@4.0.2",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "esbuild": "^0.19.11",
    "express": "^4.18.2",
    "i18next": "^23.7.16",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-http-backend": "^2.4.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^14.0.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/compression": "^1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/react-i18next": "^8.1.0",
    "nodemon": "^3.0.2",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2"
  },
  "scripts": {
    "start": "nodemon src/server/build/server.js --watch",
    "build:client": "esbuild src/client/pages/**/*.{tsx,jsx,js,ts} --bundle --minify --loader:.js=jsx --outdir=src/client/dist/",
    "build:server": "esbuild src/server/server.tsx --bundle --platform=node --outfile=src/server/build/server.js",
    "build": "yarn build:client && yarn build:server",
    "tailwindcssWatch": "yarn run tailwindcss -i ./src/client/style/index.css -o ./src/client/dist/bundle.css --watch"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
